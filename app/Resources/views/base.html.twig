            <link rel="stylesheet" href="{{ asset('bundles/bigcity/css/320.css') }}" type="text/css" media="screen and (max-width: 639px)"/>
            <link rel="stylesheet" href="{{ asset('bundles/bigcity/css/colorbox.css')}}"/>
            <link rel="stylesheet" href="{{ asset('bundles/bigcity/css/lightview/lightview.css') }}" type="text/css"/>
        {% endblock %}
        {% block javascripts %}
            <!--[if lt IE 9]>
            <script src="http://ie7-js.googlecode.com/svn/version/2.1(beta4)/IE9.js"></script>
            <![endif]-->
