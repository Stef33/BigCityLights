            <script type="text/javascript" src="{{ asset('bundles/bigcity/js/swfobject.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/bigcity/js/spinners/spinners.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/bigcity/js/lightview/lightview.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/bigcity/js/jquery-migrate-1.1.1.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/bigcity/js/jquery-ui-1.10.1.custom.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/bigcity/js/jquery.scrollTo-1.4.3.1.min.js') }}"></script>
